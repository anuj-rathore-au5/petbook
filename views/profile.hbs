    <div class="container mt-2">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel profile-widget">
                    <div class="row">
                        <div class="col-sm-12 lg-12">
                            <div class="image-container bg2">
                                <img src="{{user_data.profile_pic}}" class="avatar" alt="avatar">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="details">
                                <h4 class="text-light">{{user_data.pet_name}}<i class="fa fa-sheild"></i></h4>
                                <div cls="ml-2">
                                    <span class="fa fa-star checked" id="ratingstar1"></span>
                                    <span class="fa fa-star checked" id="ratingstar1"></span>
                                    <span class="fa fa-star checked" id="ratingstar1"></span>
                                    <span class="fa fa-star" id="ratingstar1"></span>
                                    <span class="fa fa-star" id="ratingstar1"></span>
                                </div>
                                <div class="mg-top-10">
                                    <button class="btn btn-light btn-sm" data-toggle="modal" type="button"
                                        data-target="#followers">Followers<span
                                            class="badge ml-2 badge-dark rounded-circle"
                                            id="followers_count">{{user_data.followers.length}}</span></button>
                                    <button class="btn btn-light btn-sm" data-toggle="modal" type="button"
                                        data-target="#followings">Following<span
                                            class="badge ml-2 badge-dark rounded-circle"
                                            id="following_count">{{user_data.followings.length}}</span></button>
                                    <button class="btn btn-light btn-sm" data-toggle="modal" type="button"
                                        data-target="#editprofile">Edit profile</button>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>
        <div class="row d-flex justify-content-between">
            <div class="col-md-2">
                <div class="card bg-dark text-light">
                    <h5 class="card-header text-center details1">Species</h5>
                    <div class="card-body text-center">
                        <h6 class="text-center"><b>{{user_data.pet_species.species}}</b></h6>
                        <p>{{user_data.pet_species.breed}}</p>
                        <hr>
                        <h6 class="text-center"><b>Breed</b></h6>
                        <p>{{user_data.pet_species.breed}}</p>
                        <hr>
                        <h6 class="text-center"><b>Origin</b></h6>
                        <p>{{user_data.pet_species.origin}}</p>
                        <hr>
                        <h6 class="text-center"><b>Life Span</b></h6>
                        <p>{{user_data.pet_species.life_span}}</p>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card bg-dark" style="padding: 0%;margin:0%">
                    <div class="card-header text-dark bg-dark" style="padding: 0%;">
                        <h4 class="text-light">Create Post</h4>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control bg-dark text-light" placeholder="Write Something Here!"
                            id="post_caption" rows="3"></textarea>
                        <label for="attachment1" class="btn btn-primary mt-2 bg-dark ml-1">Add Photo/Video</label>
                        <button type="button" class="btn btn-primary bg-dark" id="share_post">Post</button>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card bg-dark text-light">
                    <h5 class="card-header text-center details1">Health</h5>
                    <div class="card-body text-center">
                        <h6 class="text-center"><b>Age</b></h6>
                        <p>{{user_data.pet_health.age}}</p>
                        <hr>
                        <h6 class="text-center"><b>Height</b></h6>
                        <p>{{user_data.pet_health.height}}</p>
                        <hr>
                        <h6 class="text-center"><b>Weight</b></h6>
                        <p>{{user_data.pet_health.weight}}</p>
                        <hr>
                        <h6 class="text-center"><b>Skin Condition</b></h6>
                        <p>{{user_data.pet_health.skin}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row d-flex justify-content-between my-2">
            {{#each user_post}}
            <div class="col-md-2">
                <div class="card">
                    <div class="card-body" style="padding: 0%;">
                        <p class="card-text">{{this.caption}}</p>
                        <img src="{{this.post_media}}" alt="" height="90%" width="100%" class="rounded">
                        <div class="text-center">
                            <span class="badge badge-dark rounded">{{this.likes.length}}Likes</span>
                            <span class="badge badge-dark rounded">{{this.comments.length}}comments</span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
    
        </div>
    </div>
