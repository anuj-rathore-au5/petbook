    <div class="modal fade" id="editprofile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit profile details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <form action="/Authusers/editprofile" method="POST" class="form-group-mt-4"
                                    enctype="multipart/form-data">
                                    <div class="form-group">
                                        <h4 class="text-center">Profile</h4>
                                    </div>
                                    <div class="form-group">
                                        <label for="coverPic">Cover pic</label>
                                        <input type="file" placeholder="coverpic" name="cover_pic">
                                    </div>
                                    <div class="form-group">
                                        <label>profile pic</label>
                                        <input type="file" placeholder="profile pic" name="profile_pic">
                                    </div>
                                    <div class="form-group">
                                        <label>Pet Name</label>
                                        <input type="text" class="form-control" name="pet_name" placeholder="pet name"
                                            value="{{user_data.pet_name}}">
                                    </div>
                                    <hr>
                                    <div class="form-group">
                                        <h4 class="text-center">Species</h4>
                                    </div>
                                    <div class="form-group">
                                        <label>Species</label>
                                        <select name="species">
                                            <option value="Animal">Animal</option>
                                            <option value="Bird">Bird</option>
                                            <option value="mamal">mamal</option>
                                            <option value="reptile">reptile</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Breed</label>
                                        <input type="text" class="form-control" name="breed" placeholder="breed"
                                            value="{{user_data.pet_species.breed}}">
                                    </div>
                                    <div class="form-group">
                                        <label>Origin</label>
                                        <input type="text" name="origin" class="form-control" placeholder="origin"
                                            value="{{user_data.pet_species.origin}}">
                                    </div>
                                    <div class="form-group">
                                        <label>Life Span</label>
                                        <input type="text" name="life_span" class="form-control" placeholder="life span"
                                            value="{{user_data.pet_species.life_span}}">
                                    </div>
                                    <hr>
                                    <div class="form-group">
                                        <h4 class="text-center">Health</h4>
                                    </div>
                                    <div class="form-group">
                                        <label>Age</label>
                                        <input type="number" class="form-control" name="age" placeholder="age"
                                            value="{{user_data.pet_health.age}}">
                                    </div>
                                    <div class="form-group">
                                        <label>Height</label>
                                        <input type="number" class="form-control" name="height"
                                            placeholder="height in cm" value="{{user_data.pet_health.height}}">
                                    </div>
                                    <div class="form-group">
                                        <label>Weight</label>
                                        <input type="number" class="form-control" name="weight"
                                            placeholder="weight in kg" value="{{user_data.pet_health.weight}}">
                                    </div>
                                    <div class="form-group">
                                        <label>Skin condition</label>
                                        <input type="text" class="form-control" name="skin_condition"
                                            placeholder="Skin condition" value="{{user_data.pet_health.skin}}">
                                    </div>
                                    <input type="hidden" name="user_id" value="{{user_data.user_id}}">
                                    <button class="btn btn-primary" type="submit">Save Details</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
